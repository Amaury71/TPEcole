{% extends 'base.html.twig' %}

{% block title %}Child{% endblock %}

{% block body %}
    {% include('navbar.html.twig') %}

    <table class="table">
        <tr>
                <th> </th>
                <th>Nom : </th>
                <th>Prénom : </th>
                <th>Age : </th>
                <th>Classe :</th>
                <th>Date Inscription :</th>
                <th>Inscription validé ?</th>
                <th>Photo de photoClass</th>


        </tr>

    {% for child  in child %}

        <tr>
         <th>Enfant :</th>
        <td>{{ child.lastName }}</td>
        <td> {{ child.firstName }}</td>
        <td>{{ child.age }}</td>
        <td>{{ child.class }}</td>
        <td>{{ child.dateAdd|date("m/d/Y  -  H:i")  }}</td>
         {% if (child.validationInscription== false) %}
        <td>En cours </td>
         {% else %}
         <td>Oui </td>
         {% endif %}
            {% if child.photoClass == '' %}
                <td>Pas de photo de classe disponnilbe</td>

            {% else %}
                    <td><img src="{{ vich_uploader_asset(child.photoClass, 'imageFile') }}" alt="" style="width:500px; height:auto;"></td>

            {% endif %}

        </tr>
    {% endfor %}
</table>


