{% extends 'base.html.twig' %}

{% block title %}Message index{% endblock %}

{% block body %}
    {% include('navbar.html.twig') %}

    <h1>Message index</h1>

    <table class="table">
        <thead>
            <tr>
                <th class="hidden">Id</th>
                <th>Message</th>
                <th>Date d'envoie</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for message in messages %}
            <tr>
                <td class="hidden">{{ message.id }}</td>
                <td>{{ message.msg }}</td>
                <td>{{ message.DateEnvoie ? message.DateEnvoie|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('message_show', {'id': message.id}) }}">Voir</a>
                    <a href="{{ path('message_edit', {'id': message.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('message_new') }}">Nouveau message</a>
{% endblock %}
