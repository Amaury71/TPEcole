{% extends 'base.html.twig' %}

{% block title %}Utilisateur
{% endblock %}

{% block body %}
    {% include('navbar.html.twig') %}
    <h1>Utilisateur</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Nom :</th>
                <td>{{ user.lastname }}</td>
            </tr>
            <tr>
                <th>Prénom :</th>
                <td>{{ user.firstname }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Téléphone </th>
                <td>{{ user.tel }}</td>
            </tr>
            <tr>
                <th>Role </th>
                <td>{% if is_granted('ROLE_TEACHER') %}
                        Professeur

                    {% endif %}
                    {% if is_granted('ROLE_PARENT') %}
                        Parent
                    {% endif %}
                    {% if is_granted('ROLE_ADMIN') %}
                        Administrateur
                    {% endif %}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('home') }}">back to list</a>

    <a href="{{ path('user_edit', {'id': user.id}) }}">edit</a>




    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
